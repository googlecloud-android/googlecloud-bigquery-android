<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.rafaelsf80.apps.db410c.bigquery.Main">

    <android.support.v7.widget.GridLayout
        android:id="@+id/detail_additional_pane"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:columnCount="2"
        android:background="#455A64">

        <TextView
            android:id="@+id/tv_sensorx_label"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Sensor X: "
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#90A4AE"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_sensorx_data"
            android:gravity="center_vertical"
            android:text="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            app:layout_gravity="fill"/>

        <TextView
            android:id="@+id/tv_sensory_label"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Sensor Y: "
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#90A4AE"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <TextView
            android:id="@+id/tv_sensory_data"
            android:gravity="center_vertical"
            android:text="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            app:layout_gravity="fill"/>

        <TextView
            android:id="@+id/tv_sensorz_label"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Sensor Z: "
            android:textColor="#90A4AE"
            android:textSize="20sp"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />


        <TextView
            android:id="@+id/tv_sensorz_data"
            android:gravity="center_vertical"
            android:text="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            app:layout_gravity="fill" />

        <TextView
            android:id="@+id/tv_numrows_label"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Rows sent: "
            android:textColor="#FFA4AE"
            android:textSize="20sp"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />


        <TextView
            android:id="@+id/tv_numrows_data"
            android:gravity="center_vertical"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#FFA4AE"
            app:layout_gravity="fill" />
    </android.support.v7.widget.GridLayout>
</LinearLayout>
